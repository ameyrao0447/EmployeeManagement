@model EmployeeTem
<form asp-controller="home" asp-action="edit" method="post">
    <div class="form-group row">
        <label asp-for="Name" class="col-form-label col-sm-2">
            Name
        </label>
        <input hidden asp-for="Id"/>
        <div class="col-sm-10"><input type="text" asp-for="Name" class="form-control" /></div>
        <span asp-validation-for="Name" style="color:red"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Lastname" class="col-form-label col-sm-2">
            LastName
        </label>

        <div class="col-sm-10"><input type="text" asp-for="Lastname" class="form-control" /></div>
        <span asp-validation-for="Lastname" style="color:red"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Department" class="col-form-label col-sm-2">
            Department
        </label>

        <div class="col-sm-10"><input type="text" asp-for="Department" class="form-control" /></div>
        <span asp-validation-for="Department" style="color:red"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Roles" class="col-form-label col-sm-2">
            Roles
        </label>

        <div class="col-sm-10"><input type="text" asp-for="Roles" class="form-control" /></div>
        <span asp-validation-for="Roles" style="color:red"></span>
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>
